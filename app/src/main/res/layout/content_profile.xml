<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            style="@style/headerText"
            android:text="Profile Info"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageView"
                android:src="@drawable/ic_name"
                style="@style/profileDetailsImage"
                app:tint="#031D7C" />

            <TextView
                android:id="@+id/nameTextView"
                android:text="Name"
                android:layout_toRightOf="@id/nameImageView"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="developer"
                android:id="@+id/names"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/nameImageView"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/mobileImageView"
                android:src="@drawable/ic_mobile"
                app:tint="#031D7C"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Mobile"
                android:layout_toRightOf="@id/mobileImageView"
                style="@style/profileDetailsTextMain"/>

            <TextView
                android:text="+91-8129999999"
                android:id="@+id/mobilenumbers"
                android:layout_toRightOf="@id/mobileImageView"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/emailImageView"
                android:src="@drawable/ic_email"
                app:tint="#031D7C"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Email"
                android:layout_toRightOf="@id/emailImageView"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="developer@appsnipp.com"
                android:id="@+id/emialds"
                android:layout_toRightOf="@id/emailImageView"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/addressImageView"
                android:src="@drawable/ic_address"
                app:tint="#031D7C"
                style="@style/profileDetailsImage" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/addressImageView"
                android:text="Address" />
   <HorizontalScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="45dp"
                android:text="Avenue 2nd Street NW SY."
                android:id="@+id/address"
                android:singleLine="false"
                android:layout_toRightOf="@id/addressImageView"
                style="@style/profileDetailsMiniText" />
   </HorizontalScrollView>
        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/dobImageView"
                android:src="@drawable/ic_dob"
                app:tint="#031D7C"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="D.O.B"
                android:layout_toRightOf="@id/dobImageView"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="12-05-1990"
                android:id="@+id/dates"
                android:layout_toRightOf="@id/dobImageView"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageViews"
                android:src="@drawable/father"
                style="@style/profileDetailsImage"
                app:tint="#031D7C" />

            <TextView
                android:id="@+id/nameTextViews"
                android:text="Father Name "
                android:layout_toRightOf="@id/nameImageViews"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="Father Name"
                android:textAllCaps="true"
                android:id="@+id/fathernames"
                android:layout_toRightOf="@id/nameImageViews"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>


        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/mobileImageViews"
                android:src="@drawable/ic_mobile"
                android:visibility="invisible"
                app:tint="#031D7C"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Mobile"
                android:visibility="invisible"
                android:layout_toRightOf="@id/mobileImageViews"
                style="@style/profileDetailsTextMain"/>

            <TextView
                android:text="+91-8129999999"
                android:visibility="invisible"
                android:layout_toRightOf="@id/mobileImageViews"
                style="@style/profileDetailsMiniText" />
            <View style="@style/proifleDetailsView" />
        </RelativeLayout>


 </LinearLayout>


</androidx.core.widget.NestedScrollView>